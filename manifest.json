{
  "manifest_version": 3,
  "name": "Phish Busters",
  "version": "1.0.0",
  "description": "Identify phishing messages in real-time with gamified learning",
  "permissions": ["storage", "activeTab", "scripting", "contextMenus"],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://web.whatsapp.com/*",
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon8.png",
      "48": "assets/icons/icon8.png",
      "128": "assets/icons/icon8.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon8.png",
    "48": "assets/icons/icon8.png",
    "128": "assets/icons/icon8.png"
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/content/detector.js",
        "src/games/PhishVsLegit.js",
        "src/games/BuildAScam.js",
        "src/games/MemoryMatch.js",
        "src/games/ScamEscapeRoom.js"
      ],
      "css": ["src/content/styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/icons/icon8.png", "assets/icons/icon2.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
